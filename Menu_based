import java.util.Scanner;

public class Task1 {
	static Scanner input = new Scanner(System.in);
	static String me;

	public static void main(String[] args) {

		menu();

	}

	public static void menu(){
		int choice = 0;
		System.out.println("Enter your name:");
		me=input.nextLine();
		System.out.println("Name accepted \nwelcome "+me);
		do {
			System.out.println("\nMENU:");
			System.out.println("----------------------------------------");
			System.out.println("1) Generate username");
			System.out.println("2) Calculate the factorial of a number");
			System.out.println("3) Exit\n");
			System.out.print("Enter your choice:");
			choice = input.nextInt();
				input.nextLine();
			switch(choice) {
			case 1:
				me=string_function(choice);
				create_name(me);
				break;
			case 2:number_function();break;
			case 3:System.out.println("Exit..");
			break;
			default:System.out.println("\n Invalid choice....");
			break;
			}
			if (choice == 3) {
				break;
			}
		} while (choice != 3);
		
	}

	public static String string_function(int choice) {
		System.out.println("\nYou choose Option " + choice);
		String user;
		System.out.println("Enter you first name and Last name:");
		user = input.nextLine();
		return user;
	}
	public static void create_name(String username) {
		String String1=" "+username.charAt(0);
		int pos=username.indexOf(" ");
		String String2=username.substring(pos+1);
		String2=String2.split(" ")[0];
		System.out.println("Generated username: "+String1+String2);
		
	}
	public static void number_function() {
		System.out.println("\nYou choose Option 2");
		int number=0;
		int factorial=1;
		int count=0;
		String output="";
		System.out.println("Enter a number to calculate Factorial");
		number=input.nextInt();
		if(number<=0) {
			System.out.println(" Error! Number must be greater than 0");
			return;
		}
		//else if() {
			//System.out.println(" Error! Number must be a whole number");
			//return;
		//}
		for(int i=number;i>=1;i--) {
			if(i==1)
				output+=i;
			else
				output+=i+"*";
			factorial=factorial*i;
			count++;
		}
		System.out.println(output+" = "+factorial);
			
		
	}

}
